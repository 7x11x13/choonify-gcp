service cloud.firestore {
    match /databases/{database}/documents {
        match /users/{userId} {
            allow read: if request.auth != null && request.auth.uid == userId
        }
        match /task_messages/{userId} {
            allow read: if request.auth != null && request.auth.uid == userId
        }
    }
}

service firebase.storage {
    match /b/{bucket}/o {
        match /default/{userId}/default {
            allow read: if request.auth != null && request.auth.uid == userId
        }
        match /public/{all=**} {
            allow read: if true
        }
    }
}