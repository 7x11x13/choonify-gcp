{
    "hosting": [
        {
            "target": "dev",
            "public": "dist",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "/api/**",
                    "run": {
                        "serviceId": "api",
                        "region": "us-west1"
                    }
                },
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        }
    ],
    "firestore": {
        "rules": "firestore.rules"
    },
    "storage": [
        {
            "rules": "storage.rules",
            "bucket": "ffmpeg-input"
        }
    ]
}